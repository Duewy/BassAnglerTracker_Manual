<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/lt_brown">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_event_type"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="12dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/radioGroupEventType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <RadioButton
            android:id="@+id/radioFunDay"
            android:layout_width= "match_parent"
            android:layout_height="50dp"
            android:text="@string/fun_Day"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_outline_grey"/>

        <RadioButton
            android:id="@+id/radioTournament"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/tournament"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_outline_grey"/>

        <RadioButton
            android:id="@+id/radioBoth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/both"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="@drawable/btn_outline_grey" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCancelEventType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/btn_outline_grey"/>

        <Button
            android:id="@+id/btnConfirmEventType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/btn_outline_orange" />
    </LinearLayout>

</LinearLayout>
